import numpy as np

def mean(xs):
    n = len(xs)
    x = 0
    i = 0
    while i < n:
        x = x + xs[i]
        i = i + 1
    return float(x)/n

def noisy_many_means(ys):
    n = len(ys)
    i = 0
    xs = []
    while i < n:
        m = mean(ys[i])
        x_i = len(ys[i])
        xs.append(m + np.random.laplace(0.,1./x_i))
        i = i + 1
    return xs

def noisy_mean_of_means(ys):
    n = len(ys)
    i = 0
    xs = []
    while i < n:
        m = mean(ys[i])
        xs.append(m)
        i = i + 1
    x = mean(xs) + np.random.laplace(0.,2./(n - 1))
    return x

#sum of squares formulas                                                         
def SST(xs,m):
    n = len(xs)
    x = 0
    i = 0
    while i < len(xs):
        l = len(xs[i])
        y = 0
        j = 0
        while j < l:
            y = y + (xs[i][j] - m)**2
            j = j + 1
        x = x + y
        i = i + 1
    return x

def SSA(xs,ys,m):
#given a list of group sizes, corresponding group means, and mean of means       
#compute the sum of squares                                                      
    if len(xs) != len(ys):
        return False
    else:
        n = len(xs)
        x = 0
        i = 0
        while i < n:
            x = x + xs[i]*((ys[i] - m)**2)
            i = i + 1
        return x

def SSE(xs,ys):
    if len(xs) != len(ys):
        return False
    else:
        n = len(xs)
        x = 0
        i = 0
        while i < n:
            l = len(xs[i])
            y = 0
            j = 0
            while j < l:
                y = y + (xs[i][j] - ys[i])**2
                j = j + 1
            x = x + y
            i = i + 1
        return x
